<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:padding="5dp"
    android:background="@color/player_background"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="vertical"
        android:layout_marginTop="2dp"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >

            <ImageButton
                android:id="@+id/btnCancel"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="end"
                android:layout_marginEnd="0dp"
                android:background="@color/player_background"
                android:scaleType="fitXY"
                android:src="@drawable/cross" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:weightSum="1"
        android:layout_width="@dimen/size_300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnPlayNow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="@dimen/size_5dp"
                android:background="#778899"
                android:scaleType="fitXY"
                android:src="@drawable/listimg" />

            <TextView
                android:id="@+id/play_new_song"
                android:layout_width="140dp"
                android:layout_height="21dp"
                android:layout_marginTop="@dimen/size_7_dp"
                android:text="(PlayNow)"
                android:lines="2"
                android:layout_marginLeft="5dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageButton
                android:id="@+id/btnPlayNext"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="@dimen/size_5dp"
                android:background="@color/player_background"
                android:scaleType="fitXY"
                android:src="@drawable/next" />

            <TextView
                android:id="@+id/play_current_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_7_dp"
                android:text="(PlayNext)"
                android:layout_marginRight="5dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>


    </LinearLayout>