<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/background">

    <ImageView
        android:id="@+id/music_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:src="@drawable/listimg" />

    <TextView
        android:id="@+id/songtitle"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/music_icon"
        android:paddingLeft="@dimen/size_8_dp"
        android:paddingTop="@dimen/size_7_dp"
        android:singleLine="true"
        android:text="SongSongSongSong"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/songArtist"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/songtitle"
        android:layout_toRightOf="@+id/music_icon"
        android:paddingLeft="8dp"
        android:singleLine="true"
        android:text="SongSongSongSong"
        android:textSize="9sp" />


    <ImageView
        android:id="@+id/recyclebin"
        android:layout_width="44dp"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:src="@drawable/bin" />

    <TextView
        android:id="@+id/listsongduration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:paddingTop="13dp"
        android:layout_toStartOf="@id/recyclebin"
        android:textSize="9sp" />



</RelativeLayout>